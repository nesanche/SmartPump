<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.smartpump.bismara.bismaraapp.ui.util.RoundImage
        android:id="@+id/imageView_round"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:elevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/image_empty_user" />

    <TextView
        android:id="@+id/tvErrorLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etPass"
        android:layout_below="@+id/etPass"
        android:layout_marginTop="5dp"
        android:text="@string/en_login_error_message"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/etUser"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_user"
        android:ems="10"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_username"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/etUser"
        android:layout_alignStart="@+id/etUser"
        android:layout_below="@+id/etUser"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_pass"
        android:ems="10"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/etPass"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/etPass"
        android:layout_marginBottom="34dp"
        android:elevation="5dp"
        android:background="@drawable/btnstyle"
        android:text="@string/en_login_continue_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvErrorLogin"
        android:layout_below="@+id/tvErrorLogin"
        android:text="@string/en_register_suggestion"
        android:textColor="#ffffff" />

</RelativeLayout>