<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_user"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_name"
        android:inputType="textCapWords"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etName"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_user"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_last_name"
        android:inputType="textCapWords"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >
    </EditText>

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etLastName"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_user"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_username"
        android:inputType="text"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >
    </EditText>

    <EditText
        android:id="@+id/etPass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUsername"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_pass"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >
    </EditText>

    <EditText
        android:id="@+id/etRepeatPass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etPass"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_pass"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_repeat_password"
        android:inputType="textPassword"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >
    </EditText>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etRepeatPass"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/ic_mail"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="@string/en_hint_mail"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:maxLines="1"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:paddingTop="5dp" >
    </EditText>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/etEmail"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etEmail"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btnstyle"
        android:text="@string/en_register_button"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>